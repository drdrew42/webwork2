<script type="text/template" id="user-template">
<li><input class='classlist-li' type='checkbox' data-username='<%= user %>' id='li-<%= cid %>'>
    <label class='checklist' for='li-<%= cid %>'> <%= firstname %> <%= lastname %> ( <%= user %> ) </label></li>

</script>


<script type="text/template" id="user-list-template">
<div class="user-list-container">
  <div class='btn-group-vertical'></div>
</div>
</script>

<script type="text/template" id="user-list-row-template">
  <span class="first-name"></span> <span class="last-name"></span>
  (<span class="user-id"></span>)
</script>


<script type="text/template" id="problem-set-list-template">
  <div class="problem-set-list-sidebar">
        <div class="btn-group">
          <button type="button" class="btn  btn-outline-dark btn-sm dropdown-toggle" data-toggle="dropdown">
            Sort By <span class="caret"></span>
          </button>
          <div class="dropdown-menu" role="menu">
            <button class="dropdown-item sort-problem-set-option" data-sortfield="set_id">Set Name</button>
            <button class="dropdown-item sort-problem-set-option" data-sortfield="due_date">Due Date</button>
          </div>
  </div>
  <div class="prob-set-list-container">
    <div class='list-group'></div>
  </div>
</div>
</script>


<script type="text/template" id="set-view-template">
<span class="set-name"></span><span title="assigned users/total users; num. probs." class="num-users"></span>
</script>
